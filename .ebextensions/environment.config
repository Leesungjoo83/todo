option_settings:
  aws:elasticbeanstalk:application:environment:
    PORT: 3000
    NODE_ENV: production
    # 데이터베이스 환경변수는 AWS Systems Manager Parameter Store에서 참조하거나
    # Elastic Beanstalk 환경 설정에서 직접 입력하세요.
    # 보안을 위해 환경변수에는 민감한 정보를 직접 입력하지 마세요.
    # DB_HOST: your-rds-endpoint.xxxxx.us-east-1.rds.amazonaws.com
    # DB_PORT: 3307
    # DB_USER: admin
    # DB_NAME: todo
    # DB_CONNECTION_LIMIT: 5
    # DB_PASSWORD는 AWS Secrets Manager 또는 환경 설정에서만 설정하세요.

